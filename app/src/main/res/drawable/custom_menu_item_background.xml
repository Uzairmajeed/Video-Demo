<!-- custom_menu_item_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="#E23939" /> <!-- Change the color when pressed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="#FFCDD2" /> <!-- Default color -->
        </shape>
    </item>
</selector>
